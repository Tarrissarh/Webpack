	"license": "MIT",
	"main": "webpack.config.js",
	"scripts": {
		"build:prod": "SET NODE_ENV=production&& webpack --mode production --colors --progress",
		"build:dev": "SET NODE_ENV=development&& webpack --mode development --colors --progress",
		"server": "SET NODE_ENV=development&& webpack-dev-server --mode development --hot --colors --progress",
		"watch": "SET NODE_ENV=development&& webpack --watch"
	},
